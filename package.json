{
  "name": "@solar-republic/wasm-secp256k1",
  "description": "TypeScript wrapper and Web Assembly module of the libsecp256k1 C library",
  "version": "0.0.4",
  "type": "module",
  "main": "build/dist/main.js",
  "files": [
    "build/dist/"
  ],
  "author": "Blake Regalia <blake.regalia@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build",
    "build:wasm": "docker build -f secp256k1.Dockerfile . -t wasm-secp256k1 && docker run -it -v $(pwd)/public:/out wasm-secp256k1",
    "gen": "bun run ./src/generate.ts public/secp256k1.js > ./src/gen/wasm.ts",
    "build": "yarn build:wasm && yarn gen && tsc",
    "demo": "yarn build && vite dev"
  },
  "dependencies": {},
  "devDependencies": {
    "@blake.regalia/belt": "^0.21.0",
    "@blake.regalia/eslint-config-elite": "^0.3.3",
    "@blake.regalia/tsconfig": "^0.1.2",
    "@types/node": "^20.8.9",
    "@types/web": "^0.0.119",
    "@typescript-eslint/parser": "^6.9.0",
    "acorn": "^8.11.2",
    "eslint": "^8.52.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "estree-walker": "^3.0.3",
    "ts-node": "^10.9.1",
    "ts-toolbelt": "^9.6.0",
    "tsc-esm-fix": "^2.20.17",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
